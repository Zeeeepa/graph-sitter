# Unified Webhooks Environment Configuration
# Copy this file to .env and fill in your actual values

# GitHub Configuration (Required)
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_ORG=your-organization-name
GITHUB_REPO=your-repository-name

# Linear Configuration (Required for Linear webhooks)
LINEAR_API_KEY=lin_api_your_linear_api_key
LINEAR_WEBHOOK_SECRET=your_linear_webhook_secret

# Codegen Configuration (Required)
CODEGEN_API_KEY=your_codegen_api_key
CODEGEN_ORG_ID=your_codegen_organization_id

# OpenAI Configuration (Optional - for enhanced AI processing)
OPENAI_API_KEY=sk-your_openai_api_key

# Slack Configuration (Optional - for Slack integrations)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Environment Settings (Optional)
ENVIRONMENT=production
LOG_LEVEL=INFO

# Repository Settings (Optional - for Linear webhook routing)
GITHUB_REPO_FULL_NAME=your-org/your-repo

# Modal Settings (Optional)
MODAL_TOKEN_ID=your_modal_token_id
MODAL_TOKEN_SECRET=your_modal_token_secret

