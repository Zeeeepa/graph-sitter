# Graph-Sitter Environment Configuration
# Copy this file to .env and update with your actual values

# Codegen API Configuration
CODEGEN_ORG_ID=323
CODEGEN_TOKEN=your_codegen_api_token_here
CODEGEN_BASE_URL=https://api.codegen.com

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/graph_sitter_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Graph-Sitter Configuration
GRAPH_SITTER_CACHE_DIR=/tmp/graph_sitter_cache
GRAPH_SITTER_MAX_FILE_SIZE=10485760
GRAPH_SITTER_TIMEOUT=300
GRAPH_SITTER_LANGUAGES=python,typescript,javascript,java,cpp,rust,go

# Contexten Configuration (Agentic Orchestrator)
CONTEXTEN_ANTHROPIC_API_KEY=your_anthropic_api_key_here
CONTEXTEN_MODEL=claude-3-sonnet-20240229
CONTEXTEN_MAX_TOKENS=4096
CONTEXTEN_TEMPERATURE=0.1

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_APP_ID=your_github_app_id
GITHUB_PRIVATE_KEY_PATH=/path/to/github/private/key.pem

# Linear Integration
LINEAR_API_KEY=your_linear_api_key_here
LINEAR_WEBHOOK_SECRET=your_linear_webhook_secret

# Slack Integration
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_APP_TOKEN=your_slack_app_token

# Analytics and Monitoring
ANALYTICS_ENABLED=true
METRICS_ENDPOINT=http://localhost:9090/metrics
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# Performance Configuration
MAX_CONCURRENT_ANALYSES=5
ANALYSIS_TIMEOUT=1800
CACHE_TTL=3600
RATE_LIMIT_PER_MINUTE=100

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Development Configuration
DEBUG=false
DEVELOPMENT_MODE=false
HOT_RELOAD=false

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_AI_SUGGESTIONS=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_WEBHOOK_PROCESSING=true
ENABLE_BATCH_PROCESSING=true

# =============================================================================
# AUTONOMOUS CI/CD CONFIGURATION
# =============================================================================
# Performance monitoring thresholds
PERFORMANCE_REGRESSION_THRESHOLD=20.0
AUTO_OPTIMIZE_PERFORMANCE=false

# Dependency management settings
DEPENDENCY_UPDATE_STRATEGY=smart
SECURITY_UPDATE_PRIORITY=high
AUTO_MERGE_SECURITY_PATCHES=false

# Failure analysis settings
AUTO_FIX_CONFIDENCE_THRESHOLD=0.7
MAX_AUTO_FIXES_PER_DAY=5
ENABLE_FAILURE_LEARNING=true

# =============================================================================
# ENHANCED MONITORING CONFIGURATION
# =============================================================================
# Real-time monitoring settings
MONITORING_ENABLED=true
MONITORING_INTERVAL=300
ALERT_CHECK_INTERVAL=60
WEBSOCKET_ENABLED=true

# Dashboard monitoring
DASHBOARD_MONITORING_ENABLED=true
DASHBOARD_HEALTH_CHECK_INTERVAL=60
DASHBOARD_METRICS_RETENTION_DAYS=30

# =============================================================================
# AUTONOMOUS DEPENDENCY MANAGEMENT
# =============================================================================
# Dependency scanning settings
DEPENDENCY_SCAN_ENABLED=true
DEPENDENCY_SCAN_INTERVAL=86400  # 24 hours
DEPENDENCY_SECURITY_SCAN_ENABLED=true
DEPENDENCY_AUTO_UPDATE_ENABLED=false

# Security vulnerability settings
SECURITY_ADVISORY_CHECK_ENABLED=true
SECURITY_CRITICAL_AUTO_FIX=false
SECURITY_HIGH_AUTO_FIX=false
SECURITY_NOTIFICATION_CHANNELS=slack,email

# Compatibility analysis
COMPATIBILITY_ANALYSIS_ENABLED=true
COMPATIBILITY_RISK_THRESHOLD=medium
BREAKING_CHANGE_DETECTION=true

# =============================================================================
# AUTONOMOUS FAILURE ANALYSIS
# =============================================================================
# Failure detection settings
FAILURE_ANALYSIS_ENABLED=true
FAILURE_AUTO_RECOVERY_ENABLED=false
FAILURE_PATTERN_LEARNING=true
FAILURE_NOTIFICATION_ENABLED=true

# Auto-fix settings
AUTO_FIX_ENABLED=false
AUTO_FIX_DRY_RUN=true
AUTO_FIX_REQUIRE_APPROVAL=true
AUTO_FIX_ROLLBACK_ENABLED=true

# Learning and improvement
FAILURE_PATTERN_DATABASE_ENABLED=true
FAILURE_ANALYTICS_RETENTION_DAYS=90
FAILURE_TREND_ANALYSIS=true
