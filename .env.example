# Environment Configuration for Graph-Sitter with Autonomous CI/CD

# =============================================================================
# CODEGEN SDK CONFIGURATION
# =============================================================================
# Get these from https://codegen.com/settings
CODEGEN_ORG_ID=your_organization_id_here
CODEGEN_TOKEN=your_api_token_here

# Optional: Custom Codegen API endpoint
# CODEGEN_BASE_URL=https://codegen-sh-rest-api.modal.run

# =============================================================================
# CONTEXTEN AGENTIC ORCHESTRATOR CONFIGURATION
# =============================================================================
# AI Provider Configuration (choose one or multiple)
CONTEXTEN_ANTHROPIC_API_KEY=your_anthropic_key_here
CONTEXTEN_OPENAI_API_KEY=your_openai_key_here

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
# GitHub Personal Access Token with repo permissions
GITHUB_TOKEN=your_github_token_here

# Optional: GitHub App configuration for enhanced permissions
# GITHUB_APP_ID=your_app_id
# GITHUB_APP_PRIVATE_KEY_PATH=path/to/private-key.pem

# =============================================================================
# LINEAR INTEGRATION
# =============================================================================
# Linear API Key from https://linear.app/settings/api
LINEAR_API_KEY=your_linear_api_key_here

# Optional: Default Linear team ID
# LINEAR_TEAM_ID=your_team_id_here

# =============================================================================
# SLACK INTEGRATION
# =============================================================================
# Slack Bot Token (starts with xoxb-)
SLACK_BOT_TOKEN=your_slack_bot_token_here

# Optional: Slack App Token for Socket Mode
# SLACK_APP_TOKEN=your_slack_app_token_here

# Default Slack channel for notifications
# SLACK_DEFAULT_CHANNEL=#dev-notifications

# =============================================================================
# AUTONOMOUS CI/CD CONFIGURATION
# =============================================================================
# Performance monitoring thresholds
PERFORMANCE_REGRESSION_THRESHOLD=20.0
AUTO_OPTIMIZE_PERFORMANCE=false

# Dependency management settings
DEPENDENCY_UPDATE_STRATEGY=smart
SECURITY_UPDATE_PRIORITY=high
AUTO_MERGE_SECURITY_PATCHES=false

# Failure analysis settings
AUTO_FIX_CONFIDENCE_THRESHOLD=0.7
MAX_AUTO_FIXES_PER_DAY=5
ENABLE_FAILURE_LEARNING=true

# =============================================================================
# SECURITY AND MONITORING
# =============================================================================
# Optional: Slack webhook for critical alerts
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Optional: Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=alerts@yourcompany.com

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development mode settings
DEBUG=false
LOG_LEVEL=INFO

# Optional: Custom cache directory
# CACHE_DIR=.cache

# Optional: Custom temporary directory
# TEMP_DIR=/tmp/graph-sitter

# =============================================================================
# GRAPH-SITTER SPECIFIC CONFIGURATION
# =============================================================================
# Cython compilation settings
CYTHON_COMPILE_ON_IMPORT=true

# Optional: Custom tree-sitter parsers directory
# TREE_SITTER_PARSERS_DIR=./parsers

# Optional: Maximum file size for analysis (in MB)
# MAX_FILE_SIZE_MB=10

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test environment settings
TEST_TIMEOUT=300
PYTEST_WORKERS=auto

# Optional: Test database configuration
# TEST_DATABASE_URL=sqlite:///test.db

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Production deployment settings
ENVIRONMENT=development

# Optional: Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Optional: Application monitoring
# DATADOG_API_KEY=your_datadog_key_here

# =============================================================================
# USAGE EXAMPLES
# =============================================================================
# 
# 1. Basic Setup (Minimum Required):
#    CODEGEN_ORG_ID=11
#    CODEGEN_TOKEN=your_token
#    GITHUB_TOKEN=ghp_your_token
#
# 2. Full Autonomous CI/CD:
#    All Codegen + GitHub settings above, plus:
#    PERFORMANCE_REGRESSION_THRESHOLD=15.0
#    AUTO_FIX_CONFIDENCE_THRESHOLD=0.8
#
# 3. Team Collaboration:
#    Add Linear and Slack tokens for full integration
#
# 4. Development Mode:
#    DEBUG=true
#    LOG_LEVEL=DEBUG
#    ENVIRONMENT=development
#
# =============================================================================
# SECURITY NOTES
# =============================================================================
# 
# - Never commit this file with real credentials
# - Use GitHub Secrets for CI/CD environments
# - Rotate tokens regularly
# - Use least-privilege access for all tokens
# - Consider using environment-specific .env files
#
# =============================================================================

