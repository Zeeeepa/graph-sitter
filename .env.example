# ============================================================================
# Graph-Sitter Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# For detailed configuration guide, see: https://graph-sitter.com/configuration

# ============================================================================
# CODEGEN SDK CONFIGURATION
# ============================================================================
# Required for AI-powered development features
# Get your credentials at: https://codegen.com/settings

CODEGEN_ORG_ID=323
CODEGEN_TOKEN=your_codegen_api_token_here
CODEGEN_BASE_URL=https://api.codegen.com

# Optional: Custom model configuration
CODEGEN_MODEL=claude-3-sonnet-20240229
CODEGEN_MAX_TOKENS=4096
CODEGEN_TEMPERATURE=0.1

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Database settings for persistent storage and caching

DATABASE_URL=postgresql://user:password@localhost:5432/graph_sitter_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_TIMEOUT=30

# Redis configuration for caching (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_TTL=3600

# ============================================================================
# GRAPH-SITTER CORE CONFIGURATION
# ============================================================================
# Core analysis engine settings

GRAPH_SITTER_CACHE_DIR=/tmp/graph_sitter_cache
GRAPH_SITTER_MAX_FILE_SIZE=10485760
GRAPH_SITTER_TIMEOUT=300
GRAPH_SITTER_LANGUAGES=python,typescript,javascript,java,cpp,rust,go

# Advanced parsing options
GRAPH_SITTER_VERIFY_GRAPH=false
GRAPH_SITTER_METHOD_USAGES=true
GRAPH_SITTER_SYNC_ENABLED=true
GRAPH_SITTER_GENERICS=false

# Performance tuning
GRAPH_SITTER_MAX_WORKERS=4
GRAPH_SITTER_BATCH_SIZE=100
GRAPH_SITTER_MEMORY_LIMIT=2048

# ============================================================================
# CONTEXTEN AGENTIC ORCHESTRATOR CONFIGURATION
# ============================================================================
# Settings for the autonomous development system

# AI Model Configuration
CONTEXTEN_ANTHROPIC_API_KEY=your_anthropic_api_key_here
CONTEXTEN_OPENAI_API_KEY=your_openai_api_key_here
CONTEXTEN_MODEL=claude-3-sonnet-20240229
CONTEXTEN_MAX_TOKENS=4096
CONTEXTEN_TEMPERATURE=0.1

# Autonomous Features
CONTEXTEN_AUTONOMOUS_MODE=true
CONTEXTEN_AUTO_DEBUGGING=true
CONTEXTEN_LEARNING_ENABLED=true
CONTEXTEN_CONTEXT_ANALYSIS=true

# Pipeline Configuration
CONTEXTEN_MAX_RETRIES=3
CONTEXTEN_TIMEOUT=1800
CONTEXTEN_PARALLEL_TASKS=2

# ============================================================================
# GITHUB INTEGRATION
# ============================================================================
# GitHub API and webhook configuration

GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_APP_ID=your_github_app_id
GITHUB_PRIVATE_KEY_PATH=/path/to/github/private/key.pem

# GitHub Features
GITHUB_AUTO_PR_REVIEW=true
GITHUB_AUTO_ISSUE_CREATION=true
GITHUB_BRANCH_PROTECTION=true
GITHUB_STATUS_CHECKS=true

# Webhook Configuration
GITHUB_WEBHOOK_URL=https://your-domain.com/webhooks/github
GITHUB_WEBHOOK_EVENTS=push,pull_request,issues,issue_comment

# ============================================================================
# LINEAR INTEGRATION
# ============================================================================
# Linear API configuration for project management

LINEAR_API_KEY=your_linear_api_key_here
LINEAR_WEBHOOK_SECRET=your_linear_webhook_secret
LINEAR_TEAM_ID=your_default_team_id

# Linear Features
LINEAR_AUTO_SYNC=true
LINEAR_CREATE_ISSUES=true
LINEAR_UPDATE_STATUS=true
LINEAR_ASSIGN_TASKS=true

# Webhook Configuration
LINEAR_WEBHOOK_URL=https://your-domain.com/webhooks/linear
LINEAR_WEBHOOK_EVENTS=Issue,IssueComment,Project

# ============================================================================
# SLACK INTEGRATION
# ============================================================================
# Slack bot and webhook configuration

SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_APP_TOKEN=your_slack_app_token
SLACK_CHANNEL_ID=your_default_channel_id

# Slack Features
SLACK_NOTIFICATIONS=true
SLACK_INTERACTIVE_COMMANDS=true
SLACK_FILE_SHARING=true
SLACK_THREAD_REPLIES=true

# Notification Settings
SLACK_NOTIFY_ON_PR=true
SLACK_NOTIFY_ON_DEPLOY=true
SLACK_NOTIFY_ON_ERROR=true
SLACK_NOTIFY_ON_SUCCESS=false

# ============================================================================
# OPENALPHA_EVOLVE AUTONOMOUS DEVELOPMENT
# ============================================================================
# Configuration for autonomous coding capabilities

# Evolution Parameters
EVOLVE_POPULATION_SIZE=50
EVOLVE_GENERATIONS=100
EVOLVE_MUTATION_RATE=0.1
EVOLVE_CROSSOVER_RATE=0.8
EVOLVE_SELECTION_PRESSURE=2.0

# Learning System
EVOLVE_LEARNING_ENABLED=true
EVOLVE_PATTERN_RECOGNITION=true
EVOLVE_ERROR_PREVENTION=true
EVOLVE_KNOWLEDGE_BASE_PATH=./learning_data

# Debugging System
EVOLVE_AUTO_DEBUG=true
EVOLVE_MAX_DEBUG_ATTEMPTS=5
EVOLVE_SYNTAX_FIXES=true
EVOLVE_LOGIC_FIXES=true
EVOLVE_PERFORMANCE_FIXES=true

# Context Analysis
EVOLVE_CONTEXT_ANALYSIS=true
EVOLVE_DEPENDENCY_MAPPING=true
EVOLVE_COMPLEXITY_METRICS=true
EVOLVE_SEMANTIC_CLUSTERING=true

# ============================================================================
# ANALYTICS AND MONITORING
# ============================================================================
# Observability and performance monitoring

ANALYTICS_ENABLED=true
METRICS_ENDPOINT=http://localhost:9090/metrics
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/graph_sitter.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=0.1

# Performance Monitoring
PERFORMANCE_MONITORING=true
TRACE_SAMPLING_RATE=0.01
PROFILE_ENABLED=false

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Security and authentication settings

SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# API Security
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60
API_CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Webhook Security
WEBHOOK_SIGNATURE_VERIFICATION=true
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
# Performance tuning and resource limits

MAX_CONCURRENT_ANALYSES=5
ANALYSIS_TIMEOUT=1800
CACHE_TTL=3600
RATE_LIMIT_PER_MINUTE=100

# Memory Management
MAX_MEMORY_USAGE=4096
GARBAGE_COLLECTION_THRESHOLD=0.8
MEMORY_PROFILING=false

# Concurrency Settings
ASYNC_WORKER_COUNT=4
THREAD_POOL_SIZE=8
PROCESS_POOL_SIZE=2

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
# Development and debugging settings

DEBUG=false
DEVELOPMENT_MODE=false
HOT_RELOAD=false
TESTING_MODE=false

# Development Tools
ENABLE_PROFILER=false
ENABLE_DEBUGGER=false
ENABLE_RELOADER=false
ENABLE_COVERAGE=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/graph_sitter_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_TIMEOUT=300

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable specific features

ENABLE_ADVANCED_ANALYTICS=true
ENABLE_AI_SUGGESTIONS=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_WEBHOOK_PROCESSING=true
ENABLE_BATCH_PROCESSING=true

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_FEATURES=false
ENABLE_ALPHA_FEATURES=false

# Platform Features
ENABLE_GITHUB_INTEGRATION=true
ENABLE_LINEAR_INTEGRATION=true
ENABLE_SLACK_INTEGRATION=true
ENABLE_OPENALPHA_EVOLVE=true

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================
# Production deployment settings

ENVIRONMENT=development
DEPLOYMENT_TYPE=standalone
CLUSTER_MODE=false

# Load Balancing
LOAD_BALANCER_ENABLED=false
HEALTH_CHECK_ENDPOINT=/health
READINESS_CHECK_ENDPOINT=/ready

# Scaling Configuration
AUTO_SCALING=false
MIN_INSTANCES=1
MAX_INSTANCES=10
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=20

# ============================================================================
# BACKUP AND RECOVERY
# ============================================================================
# Data backup and disaster recovery

BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Recovery Settings
RECOVERY_ENABLED=false
RECOVERY_POINT_OBJECTIVE=1h
RECOVERY_TIME_OBJECTIVE=4h

# ============================================================================
# COMPLIANCE AND AUDIT
# ============================================================================
# Compliance and audit trail configuration

AUDIT_LOGGING=false
COMPLIANCE_MODE=false
DATA_RETENTION_POLICY=365

# Privacy Settings
ANONYMIZE_LOGS=false
GDPR_COMPLIANCE=false
CCPA_COMPLIANCE=false

# ============================================================================
# CUSTOM EXTENSIONS
# ============================================================================
# Configuration for custom extensions and plugins

CUSTOM_EXTENSIONS_PATH=./extensions
PLUGIN_DISCOVERY=true
EXTENSION_TIMEOUT=60

# Custom Integration Settings
CUSTOM_WEBHOOK_ENDPOINTS=
CUSTOM_API_ENDPOINTS=
CUSTOM_EVENT_HANDLERS=

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
# For additional configuration options and detailed documentation,
# visit: https://graph-sitter.com/configuration

